<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.admin.admin.dao.user.UserDao">
    <select id="listUser" resultType="com.admin.admin.entity.user.User">
        SELECT * FROM "t_user" where status=#{flag}
    </select>

    <select id="getUser" parameterType="int" resultType="com.admin.admin.entity.user.User">
        SELECT * FROM "t_user" where id=#{id}
    </select>

    <insert id="saveUser" parameterType="com.admin.admin.entity.user.User">
     INSERT into t_user(accountname,password,aliasname,permissionid,
       createid,createname,areacode,phone,status) values (#{user.accountname},#{user.password},#{user.aliasname},#{user.permissionid},#{user.createid},#{user.createname},#{user.areacode},#{user.phone},#{user.status})
    </insert>
    <update id="updateUser" parameterType="com.admin.admin.entity.user.User">
        UPDATE t_user set accountname=#{user.accountname}, password=#{user.password},aliasname=#{user.aliasname},permissionid=#{user.permissionid},
        createid=#{user.createid},createname=#{user.createname},areacode=#{user.areacode},phone=#{user.phone},status=#{user.status} where id=#{user.id}
    </update>

    <update id="deleteUser">
        update t_user set status=#{flag} where id=#{UserId}
    </update>

<select id="login" resultType="com.admin.admin.entity.user.User" parameterType="String">
    select * from t_user where accountname=#{UserName} and password=#{Password}
</select>
</mapper>