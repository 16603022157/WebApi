<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.admin.admin.dao.user.UserPermissionGroupDao">
    <select id="listGroup" resultType="com.admin.admin.entity.user.UserPermissionGroup">
        SELECT * from t_userpermissiongroup WHERE status=#{flag}
    </select>

    <select id="getGroup" parameterType="int" resultType="com.admin.admin.entity.user.UserPermissionGroup">
        SELECT * from t_userpermissiongroup WHERE status=TRUE and permission_id=#{id}
    </select>
    <insert id="saveUserGroup" parameterType="com.admin.admin.entity.user.UserPermissionGroup">
        insert into t_userpermissiongroup(create_id,create_time,permission_name,create_name,status) values (#{create_id},#{create_time},#{permission_name},#{create_name},#{status})
    </insert>
    <update id="updateGroup" parameterType="com.admin.admin.entity.user.UserPermissionGroup">
        update t_userpermissiongroup set permission_name=#{permission_name},create_time=#{create_time},create_id=#{create_id},create_name=#{create_name},status=#{status} where permission_id=#{permission_id}
    </update>
    <update id="deleteGroup" parameterType="com.admin.model.ParamterModel">
        update t_userpermissiongroup set status=#{flag} where permission_id=#{id}
    </update>
</mapper>